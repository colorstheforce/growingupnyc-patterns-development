    "publish": "cross-env NODE_ENV=production pttrn publish",
    "pttrn": "pttrn"
  },
  "devDependencies": {
    "css-mqpacker": "^7.0.0",
    "imagesready": "^0.2.2",
    "jquery": "^3.5.1",
    "lodash": "^4.17.15"
